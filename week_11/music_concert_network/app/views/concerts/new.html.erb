<% if @concert.errors.any? %>
	<ul>
		<% @concert.errors.full_messages.each do |error_msg| %>
			<li> <%= error_msg %> </li>
			<% end %>
			</ul>
			<% end %>



<div class="form">
<h2><center> Enter New Concert </center></h2>

<%= form_for @concert, :html => {:class => "form-horizontal center"} do |f| %>
		<div class="form-group">
			<%= f.label :artist, "Artist", class: "col-md-4 control-label"%>
			<div class="col-sm-4">
				<%= f.text_field :artist, class: "form-control" %>
			</div>
		</div>
			
	<br>
		<div class="form-group">
			<%= f.label :venue, "Venue", class: "col-md-4 control-label"%>
			<div class="col-sm-4">
				<%= f.text_field :venue, class: "form-control" %>
			</div>
		</div>

	<br>
		<div class="form-group">
			<%= f.label :city, "City", class: "col-md-4 control-label"%>
			<div class="col-sm-4">
			<%= f.text_field :city, class: "form-control" %>
			</div>
		</div>
	<br>
		<div class="form-group">
			<%= f.label :date, "Date", class: "col-md-4 control-label"%>
			<div class="col-sm-4">
			<%= f.date_field :date, class: "form-control" %>
			</div>
		</div>
	<br>
		<div class="form-group">
			<%= f.label :price, "Price", class: "col-md-4 control-label"%>
			<div class="col-sm-4">
			<%= f.number_field :price, class: "form-control" %>
			</div>
		</div>

	<br>
		<div class="form-group">
			<%= f.label :description, "Description", class: "col-md-4 control-label" %>
		<div class="col-sm-4">
			<%= f.text_field :description, class: "form-control" %>
			</div>
		</div>
	<br>
	<center> <%= f.submit "Add Concert", class: "btn btn-default btn-primary"%><br><br>
		<h4><%= link_to("Back to concerts", concerts_path)%></h4>
	</center>

<% end %>

</div>